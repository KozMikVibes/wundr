		"helmet": "^8.1.0",
		"ioredis": "^5.9.2",
		"jsonwebtoken": "^9.0.3",
		"pg": "^8.18.0",
		"pino": "^10.3.0",
		"pino-http": "^11.0.0",
		"siwe": "^3.0.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@types/cookie-parser": "^1.4.10",
		"@types/cors": "^2.8.19",
